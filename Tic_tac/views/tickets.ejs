<%-include('header')%>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-8 central_available">
                <h2 class=" text-white font-weight-normal left_trips ml-5">My tickets</h1>
              <div class="card mt-4">
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">N° </th>
                      <th scope="col">Journey</th>
                      <th scope="col">Date </th>
                      <th scope="col">Departure Time</th>
                      <th scope="col">Price</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%var total = 0
                      for(var i=0;i<command.length;i++){%>
                    <tr>
                      <th scope="row" class="font-weight-bold"><%=i+1%></th>
                      <td><%=command[i].villedepart%>/<%=command[i].villearriver%></td>
                      <th ><%=dateaffichage(command[i].date)%></th>
                      <td><%=command[i].depart%></td>
                      <td><%=command[i].price%>€</td>
                      <%total += command[i].price%>
                      <%}%>
                    </tr>
                  </tbody>
                </table>
                </div>
                <table class="table bg-warning">
                  <tbody>
                    <tr>
                      <th scope="col" class="text-center font-weight-bold">Total</th>
                      <td class="text-center font-weight-bold"><%=total%> €</td>
                    </tr>
                  </tbody>
                </table>
                <div class="row offset-11">
                  <a href="/confirmationCommande?total=<%=total%>" type="submit" class="btn btn-primary btn-available mt-3">Confirm</a>
                </div>
              </div>



            </div>
          </div>

          </div>

    <footer>&#169; 2019 La Capsule</footer>
</body>

</html>